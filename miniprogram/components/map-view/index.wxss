/* components/map-view/index.wxss */
.map-container {
  position: relative;
  width: 100%;
  overflow: hidden;
  border-radius: 24rpx;
}

.map {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
}

.location-btn {
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  width: 88rpx;
  height: 88rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  z-index: 999;
}

.location-btn:hover {
  background-color: rgba(255, 255, 255, 1);
  transform: scale(1.1);
}

.icon-location {
  font-size: 36rpx;
  line-height: 1;
}

.location-info {
  position: absolute;
  left: 32rpx;
  bottom: 32rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  backdrop-filter: blur(10rpx);
  z-index: 998;
}

.location-text {
  font-size: 20rpx;
  opacity: 0.9;
}

/* 地图标记样式优化 */
.marker {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #6366F1 0%, #3B82F6 100%);
  color: white;
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

/* 气泡样式 */
.callout {
  background-color: white;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  font-size: 24rpx;
  color: #333;
  max-width: 300rpx;
}

.callout-title {
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #1f2937;
}

.callout-desc {
  font-size: 20rpx;
  color: #6b7280;
  line-height: 1.4;
}

/* 路线样式 */
.polyline {
  border-width: 6rpx;
  border-color: #6366F1;
  color: #6366F1;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .location-btn {
    width: 72rpx;
    height: 72rpx;
    right: 24rpx;
    bottom: 24rpx;
  }
  
  .icon-location {
    font-size: 28rpx;
  }
  
  .location-info {
    left: 24rpx;
    bottom: 24rpx;
    padding: 12rpx 16rpx;
    font-size: 20rpx;
  }
}

/* 动画效果 */
.map-container {
  animation: fadeIn 0.5s ease-in-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.location-btn {
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0% {
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  }
  50% {
    box-shadow: 0 4rpx 24rpx rgba(99, 102, 241, 0.2);
  }
  100% {
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  }
}